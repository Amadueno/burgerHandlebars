<div class="jumbotron">
  <h1 class="display-4">EAT-DA-BURGER</h1>
  <p class="lead">Name a burger and choose it once it is devoured!.</p>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <form>
        <div class="form-group">
          <label for="burger">Burger Name</label>
          <input type="text" class="form-control" id="burger">
        </div>
      
        <button type="submit" id="addBurger" class="btn btn-primary">Add Burger</button>
      </form>
    </div>
  
   
</div>
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <ul id="list-group">
                <h2>Not Devoured!</h2>
                {{#each burgers}}
                {{#unless this.devoured}}
                <li class="list-group-item">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">{{ this.name }}</h5>
                    </div>
                    <button id="devour">Devour!</button>
                    <p class="mb-1">Devoured: {{ this.devoured }}</p>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-6">
            <ul id="list-group">
                <h2>Devoured!</h2>
                {{#each burgers}}
                {{#if this.devoured}}
                <li class="list-group-item">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">{{ this.name }}</h5>
                    </div>
                    <p class="mb-1">Devoured: {{ this.devoured }}</p>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>