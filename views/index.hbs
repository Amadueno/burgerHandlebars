<div class="jumbotron">
  <h1 class="display-4">EAT-DA-BURGER</h1>
  <p class="lead"> Keep track of each burger you've devoured!</p>

</div>


<div class="container">
  <div class="row">
    <div class="col-md-12">
      <form>
        <div class="form-group">
          <label for="burger">Burger Name</label>
          <input type="text" class="form-control" placeholder="Burger Name" id="burger">

        </div>

        <button type="submit" id="addBurger" class="btn btn-primary">Add Burger</button>
        <hr>
      </form>
    </div>
  </div>
  <div class="row">
    <div class="col-mid-6">

      <ul id="notDevoured" class="list-group">
        <h2>Not Devoured</h2>
        {{#each burgers}}
        {{#unless this.devoured}}
        <li id="{{this.id}}"class="list-group-item ">
          <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-1">{{this.name}}</h5>
          <button 
          data-name="{{this.name}}"
          class="devour btn btn-success">Devour it!</button>
          </div>
          <p class="mb-1"></p>
        
        </li>
        {{/unless}}
        {{/each}}
      </ul>

    </div>

    
    <div class="col-mid-6">
      <ul id="devoured" class="list-group">
        <h2>Devoured !</h2>
        {{#each burgers}}
        {{#if this.devoured}}
        <li id="{{this.id}}" class="list-group-item ">
          <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-1">{{this.name}}</h5>
        <button class="btn btn-danger remove">Delete</button>

          </div>
          <p class="mb-1"></p>
          <small>Devoured {{ this.devoured }}</small>
        </li>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>