<div class="jumbotron">
  <h1 class="display-4">BurgerApp</h1>
  <p class="lead">This is a simple application to keep track of burgers you have devoured and havent devoured!.</p>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <form>
        <div class="form-group">
          <label for="product">Not Devoured!</label>
          <input type="text" class="form-control" id="product">
        </div>
        <div class="form-group">
          <label for="quantity">quantity</label>
          <input type="number" class="form-control" id="quantity">
        </div>
        <div class="form-group">
          <label for="cost">Price</label>
          <input type="number" class="form-control" id="cost">
        </div>
        <button type="submit" id="addGrocery" class="btn btn-primary">devoured</button>
      </form>
    </div>
  </div>
  <hr>
  <div class="row">
    <div class="col-md-6">
      <ul id="notDevoured" class="list-group">
        <h2>Not Devoured!</h2>
        {{#each burgers}}
        {{#unless this.devoured}}
        <li id="{{ this.id }}" class="list-group-item">
          <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-1">{{ this.name }}</h5>
            <button
              data-name="{{ this.name }}"
              data-quantity="{{ this.devoured }}" 
              class="purchase btn btn-success">âœ“</button>
          </div>
          
        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md-6">
      <ul id="devoured" class="list-group">
        <h2>Devoured!</h2>
        {{#each burgers}}
        {{#if this.devoured}}
        <li id="{{ this.id }}" class="list-group-item">
          <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-1">{{ this.name }}</h5>
            <button class="btn btn-danger remove">X</button>
          </div>
          
        </li>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>